{
  "private": true,
  "scripts": {
    "bootstrap": "pnpm install && husky install",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "hook:pre-commit": "lint-staged",
    "init": "corepack enable && corepack prepare pnpm@latest --activate && pnpm run bootstrap",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "sync": "syncpack format",
    "sync:mismatch": "syncpack list-mismatches"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "git-commit-msg-linter": "^4.9.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "syncpack": "^9.8.4",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --quiet --fix"
    ],
    "*.{ts,tsx,md,mdx,js,jsx,mjs,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@7.28.0"
}
